<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".register"
    android:background="@color/bluegreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/name"
        style="@style/AppTheme"
        android:textSize="34dp"
        android:textColor="@color/whiteopac"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:focusable="true"
        android:hint="username"
        android:backgroundTint="@color/whiteopac"
        android:textColor="@color/greygreenopac"
        android:textColorHint="@color/greygreenopac"
        android:layout_below="@+id/nameTI"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/nameTI"
        android:layout_marginTop="5dp"
        android:maxLength="30" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailTI"
        android:hint="email"
        android:backgroundTint="@color/whiteopac"
        android:focusable="true"
        android:textColor="@color/greygreenopac"
        android:textIsSelectable="false"
        android:textColorHint="@color/greygreenopac"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/username"
        android:layout_marginTop="5dp"
        android:maxLength="30" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTI"
        android:hint="password"
        android:backgroundTint="@color/whiteopac"
        android:focusable="true"
        android:textColor="@color/greygreenopac"
        android:textColorHint="@color/greygreenopac"
        android:layout_below="@+id/emailTI"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/emailTI"
        android:layout_marginTop="5dp"
        android:maxLength="30" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Me Up!"
        android:id="@+id/registerButton"
        android:nestedScrollingEnabled="true"
        android:background="@color/greygreenopac"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/dateTI"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dateTI" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTI"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:hint="full name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/whiteopac"
        android:focusable="true"
        android:textColor="@color/greygreenopac"
        android:textColorHint="@color/greygreenopac"
        android:maxLength="30" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_logo"
        android:adjustViewBounds="true"
        android:src="@drawable/novusapp"
        android:maxWidth="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButtonRegister"
        android:nestedScrollingEnabled="true"
        android:background="@color/greygreenopac"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_below="@+id/registerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/dateTI"
        android:hint="sobriety date"
        android:backgroundTint="@color/whiteopac"
        android:focusable="true"
        android:textColor="@color/greygreenopac"
        android:textColorHint="@color/greygreenopac"
        android:layout_below="@+id/passwordTI"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passwordTI"
        android:layout_marginTop="5dp" />

</RelativeLayout>
