<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="novusapp.drinkfree.main"
    android:background="@color/bluegreen"
    android:id="@+id/ee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/name"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/alcoholFreeText"
        android:typeface="normal" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/calendarCV"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendarimg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="16dp"
                android:src="@drawable/calendarimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateText"
                android:layout_toRightOf="@+id/calendarimg"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:text="Counter: 0 Days"
                android:typeface="normal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendarCV"
        android:id="@+id/moneyCV"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moneyImg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="16dp"
                android:src="@drawable/moneyimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moneyText"
                android:layout_toRightOf="@+id/moneyImg"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:text="Money Saved" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moneyCV"
        android:id="@+id/hsvCV"
        android:layout_marginTop="10dp">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">



            <LinearLayout
                android:id="@+id/shapeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:text="Accomplishment Badges                                             "
                        android:id="@+id/badgesTitle"
                        android:textSize="20sp"
                        android:typeface="normal"
                        android:textAlignment="center"
                        android:gravity="center|left"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/growingImage"
                        android:src="@drawable/seed"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxHeight="110dp"
                        android:maxWidth="110dp"
                        android:clickable="false"
                        android:layout_below="@+id/badgesTitle"
                        android:layout_margin="8dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/growingImage2"
                        android:src="@drawable/seed_3weeks"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxHeight="110dp"
                        android:maxWidth="110dp"
                        android:clickable="false"
                        android:visibility="invisible"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_alignTop="@+id/growingImage"
                        android:layout_toEndOf="@+id/growingImage" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/growingImage3"
                        android:src="@drawable/tree_month"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxHeight="110dp"
                        android:maxWidth="110dp"
                        android:clickable="false"
                        android:visibility="invisible"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_alignTop="@+id/growingImage"
                        android:layout_toEndOf="@+id/growingImage2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/growingImage4"
                        android:src="@drawable/tree_2months"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxHeight="110dp"
                        android:maxWidth="110dp"
                        android:clickable="false"
                        android:visibility="invisible"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+id/growingImage3"
                        android:layout_below="@+id/badgesTitle"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/growingImage5"
                        android:src="@drawable/tree_6months"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:maxHeight="110dp"
                        android:maxWidth="110dp"
                        android:clickable="false"
                        android:visibility="invisible"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+id/growingImage4"
                        android:layout_below="@+id/badgesTitle"

                        />
                </RelativeLayout>


            </LinearLayout>
        </HorizontalScrollView>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hsvCV"
        android:id="@+id/tipCV"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="fill_parent"
                android:text="Facts and Quotes"
                android:id="@+id/tipCVTitle"
                android:textSize="20sp"
                android:typeface="normal"
                android:textAlignment="textStart"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Great job and keep up the great work!"
                android:id="@+id/tipText"
                android:textSize="15sp"
                android:typeface="normal"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_below="@+id/tipCVTitle" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>
