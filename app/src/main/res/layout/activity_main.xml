<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="novusapp.drinkfree.main"
    android:background="@color/bluegreen"
    android:id="@+id/ee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/name"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/alcoholFreeText" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/calendarCV"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/calendarimg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="16dp"
                android:src="@drawable/calendarimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateText"
                android:layout_toRightOf="@+id/calendarimg"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                android:text="Counter: 0 Days" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendarCV"
        android:id="@+id/moneyCV"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moneyImg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginRight="16dp"
                android:src="@drawable/moneyimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moneyText"
                android:layout_toRightOf="@+id/moneyImg"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                android:text="Money Saved" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/growingImage"
        android:src="@drawable/seed"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxHeight="140dp"
        android:maxWidth="140dp"
        android:clickable="false"
        android:layout_below="@+id/moneyCV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Great job and keep up the great work!"
        android:id="@+id/tipText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="40dp"
        android:layout_below="@+id/growingImage"
        android:textSize="18sp"
        android:typeface="serif"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDescription"
        android:layout_below="@+id/growingImage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
