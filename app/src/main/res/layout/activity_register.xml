<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="novusapp.drinkfree.Register"
    android:background="@color/bluegreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/AppTheme"
        android:textSize="34dp"
        android:elevation="5dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/name"
        android:focusable="true"
        android:hint="username"
        android:elevation="5dp"
        android:layout_alignEnd="@+id/nameTI"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailTI"
        android:layout_below="@+id/username"
        android:layout_marginTop="10dp"
        android:hint="email"
        android:elevation="5dp"
        android:layout_alignEnd="@+id/username"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTI"
        android:layout_below="@+id/emailTI"
        android:layout_alignLeft="@+id/emailTI"
        android:layout_alignStart="@+id/emailTI"
        android:layout_marginTop="10dp"
        android:hint="password"
        android:elevation="5dp"
        android:layout_alignEnd="@+id/emailTI" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Me Up!"
        android:id="@+id/registerButton"
        android:elevation="5dp"
        android:nestedScrollingEnabled="true"
        android:background="@color/greygreen"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/sobrietyDate"
        android:layout_alignEnd="@+id/sobrietyDate"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTI"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:hint="full name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_logo"
        android:adjustViewBounds="true"
        android:src="@drawable/novusapp"
        android:maxWidth="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/sobrietyDate"
        android:layout_below="@+id/passwordTI"
        android:layout_alignStart="@+id/passwordTI"
        android:layout_alignEnd="@+id/passwordTI"
        android:hint="Date of sobriety"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButtonRegister"
        android:elevation="5dp"
        android:nestedScrollingEnabled="true"
        android:background="@color/greygreen"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/registerButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/registerButton"
        android:layout_marginTop="5dp" />

</RelativeLayout>
