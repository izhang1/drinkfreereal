<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".drinkfree"
    android:background="@color/bluegreen"
    android:id="@+id/relativelayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:contentDescription="@string/logo"
        android:longClickable="false"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/emailBox"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/logo"
        android:hint="Username (Email)"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/whiteopac" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordBox"
        android:hint="password"
        android:layout_below="@+id/emailBox"
        android:layout_alignLeft="@+id/emailBox"
        android:layout_alignStart="@+id/emailBox"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_alignEnd="@+id/emailBox"
        android:backgroundTint="@color/whiteopac"
        android:focusable="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordBox"
        android:layout_marginTop="52dp"
        android:theme="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_alignStart="@+id/passwordBox"
        android:background="@color/greygreenopac"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/passwordBox"
        android:layout_alignEnd="@+id/passwordBox"
        android:layout_alignParentStart="false"
        android:textSize="18dp"
        android:alpha="10" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/regButton"
        android:layout_below="@+id/loginButton"
        android:layout_alignEnd="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:background="@color/greygreenopac"
        android:layout_marginTop="10dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:textColor="#ffffff"
        android:focusable="false"
        android:textSize="18dp"
        android:alpha="10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_logo"
        android:src="@drawable/novusapp"
        android:maxWidth="160dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
